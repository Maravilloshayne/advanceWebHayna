@model AdvanceWebHayna.Web.ViewModels.Categories.UpdateDescriptionViewModel
@{
    ViewData["Title"] = "UpdateDescription";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<br />
<h3>Update Category "@Model.Name"</h3>

<div class="row">
    <div class="col-md-6">
        <form action="~/home/categories/update-description" method="post">
            @Html.ValidationSummary()
            <input type="hidden" name="CategoryId" value="@Model.ParentId" />
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea id="description" name="Description" style="height:800px;width:700px;">@Model.Description</textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

