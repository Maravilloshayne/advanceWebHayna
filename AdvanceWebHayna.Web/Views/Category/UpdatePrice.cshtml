@model AdvanceWebHayna.Web.ViewModels.Categories.UpdatePriceViewModel
@{
    ViewData["Title"] = "UpdateContent";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<br />
<h3>Update Price "@Model.Name"</h3>

<div class="row">
    <div class="col-md-6">
        <form action="~/home/categories/update-price" method="post">
            @Html.ValidationSummary()
            <input type="hidden" name="CategoryId" value="@Model.ParentId" />
            <div class="form-group">
                <label for="Price">Price</label>
                <textarea id="price" name="Price" style="height:800px;width:700px;">@Model.Price</textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
