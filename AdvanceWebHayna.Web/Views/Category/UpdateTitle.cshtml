@model AdvanceWebHayna.Web.ViewModels.Categories.UpdateTitleViewModel
@{
    ViewData["Title"] = "UpdateTitle";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<h2>Update Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/home/categories/update-title" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Name">Name:</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" rows="4" name="Description">
                    @Model.Description
                </textarea>
            </div>
            <div class="form-group">
                <label for="Post Expiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="postExpiry" value="@Model.PostExpiry" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
    $(function () {
        $("#postExpiry").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    </script>
}